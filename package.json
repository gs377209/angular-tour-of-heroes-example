{
  "name": "angular-tour-of-heroes-example",
  "repository": "https://github.com/gs377209/angular-tour-of-heroes-example.git",
  "version": "4.1.0",
  "description": "learning angular",
  "engines": {
    "node": "^18.12.0",
    "npm": "^8.0.0 || ^9.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "start:fr": "ng serve --open --configuration=fr",
    "build": "ng build",
    "deploy": "ng deploy",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:coverage": "ng test --no-watch --code-coverage",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky install",
    "lint": "ng lint --max-warnings 0",
    "stylelint": "stylelint --max-warnings 0 'src/**/*.{css,scss,sass}'",
    "preversion": "npm run test:ci",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && rm -rf build/temp && rm -rf dist",
    "extract": "ng extract-i18n --output-path=src/locale",
    "typecheck": "tsc -p ./tsconfig.app.json && tsc -p ./tsconfig.spec.json && tsc -p ./tsconfig.server.json && tsc -p ./tsconfig.worker.json",
    "mdlint": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "mdlintfix": "markdownlint-cli2-fix '**/*.md' '#node_modules'"
  },
  "dependencies": {
    "@angular/animations": "^16.1.6",
    "@angular/cdk": "^16.1.5",
    "@angular/common": "^16.1.6",
    "@angular/compiler": "^16.1.6",
    "@angular/core": "^16.1.6",
    "@angular/fire": "^7.6.1",
    "@angular/forms": "^16.1.6",
    "@angular/material": "^16.1.5",
    "@angular/platform-browser": "^16.1.6",
    "@angular/platform-browser-dynamic": "^16.1.6",
    "@angular/platform-server": "^16.1.6",
    "@angular/router": "^16.1.6",
    "@angular/service-worker": "^16.1.6",
    "angular-in-memory-web-api": "^0.16.0",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.0",
    "zone.js": "^0.13.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^16.1.5",
    "@angular-eslint/builder": "16.0.3",
    "@angular-eslint/eslint-plugin": "16.1.0",
    "@angular-eslint/eslint-plugin-template": "16.0.3",
    "@angular-eslint/schematics": "16.1.0",
    "@angular-eslint/template-parser": "16.0.3",
    "@angular/cli": "~16.1.5",
    "@angular/compiler-cli": "^16.1.6",
    "@angular/localize": "^16.1.6",
    "@types/jasmine": "^4.3.5",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "jasmine-core": "^5.1.0",
    "jasmine-marbles": "^0.9.2",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^13.2.3",
    "markdownlint-cli2": "^0.8.1",
    "prettier": "2.8.8",
    "stylelint": "^15.10.2",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-standard-scss": "^10.0.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^5.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0 --fix",
      "prettier --write --ignore-unknown --list-different"
    ],
    "**/*.{css,scss,sass}": [
      "stylelint --max-warnings 0 --fix",
      "prettier --write --ignore-unknown --list-different"
    ],
    "**/*": [
      "prettier --write --ignore-unknown --list-different"
    ]
  }
}
