{
  "name": "angular-tour-of-heroes-example",
  "repository": "https://github.com/gs377209/angular-tour-of-heroes-example.git",
  "version": "0.1.0",
  "description": "learning angular",
  "engines": {
    "node": ">=18.12.0",
    "npm": ">=8.19.2"
  },
  "engineStrict": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "start:fr": "ng serve --open --configuration=fr",
    "build": "ng build",
    "deploy": "ng deploy",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:coverage": "ng test --no-watch --code-coverage",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky install",
    "lint": "ng lint --max-warnings 0",
    "stylelint": "stylelint --max-warnings 0 'src/**/*.{css,scss,sass}'",
    "preversion": "npm run test:ci",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && rm -rf build/temp && rm -rf dist",
    "extract": "ng extract-i18n --output-path=src/locale",
    "typecheck": "tsc -p ./tsconfig.app.json && tsc -p ./tsconfig.spec.json && tsc -p ./tsconfig.server.json && tsc -p ./tsconfig.worker.json",
    "mdlint": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "mdlintfix": "markdownlint-cli2-fix '**/*.md' '#node_modules'"
  },
  "dependencies": {
    "@angular/animations": "^15.2.1",
    "@angular/cdk": "^15.2.1",
    "@angular/common": "^15.2.1",
    "@angular/compiler": "^15.2.1",
    "@angular/core": "^15.2.1",
    "@angular/fire": "^7.5.0",
    "@angular/forms": "^15.2.1",
    "@angular/material": "^15.2.1",
    "@angular/platform-browser": "^15.2.1",
    "@angular/platform-browser-dynamic": "^15.2.1",
    "@angular/platform-server": "^15.2.1",
    "@angular/router": "^15.2.1",
    "@angular/service-worker": "^15.2.1",
    "angular-in-memory-web-api": "^0.15.0",
    "rxjs": "^7.8.0",
    "tslib": "^2.5.0",
    "zone.js": "^0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.2.1",
    "@angular-eslint/builder": "15.2.1",
    "@angular-eslint/eslint-plugin": "15.2.1",
    "@angular-eslint/eslint-plugin-template": "15.2.1",
    "@angular-eslint/schematics": "15.2.1",
    "@angular-eslint/template-parser": "15.2.1",
    "@angular/cli": "~15.2.1",
    "@angular/compiler-cli": "^15.2.1",
    "@angular/localize": "^15.2.1",
    "@types/jasmine": "^4.3.1",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "husky": "^8.0.3",
    "jasmine-core": "^4.5.0",
    "jasmine-marbles": "^0.9.2",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^13.1.2",
    "markdownlint-cli2": "^0.6.0",
    "prettier": "2.8.4",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-config-standard-scss": "^6.1.0",
    "stylelint-order": "^6.0.2",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0 --fix",
      "prettier --write --ignore-unknown --list-different"
    ],
    "**/*.{css,scss,sass}": [
      "stylelint --max-warnings 0 --fix",
      "prettier --write --ignore-unknown --list-different"
    ],
    "**/*": [
      "prettier --write --ignore-unknown --list-different"
    ]
  }
}
