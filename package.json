{
  "name": "angular-tour-of-heroes-example",
  "repository": "https://github.com/gs377209/angular-tour-of-heroes-example.git",
  "version": "0.0.8",
  "description": "learning angular",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "start:fr": "ng serve --open --configuration=fr",
    "build": "ng build",
    "deploy": "ng deploy",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:coverage": "ng test --no-watch --code-coverage",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky install",
    "lint": "ng lint --max-warnings 0",
    "stylelint": "stylelint --max-warnings 0 'src/**/*.{css,scss,sass}'",
    "preversion": "npm run test:ci",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && rm -rf build/temp && rm -rf dist",
    "extract": "ng extract-i18n --output-path=src/locale"
  },
  "dependencies": {
    "@angular/animations": "^14.2.0",
    "@angular/cdk": "^14.2.0",
    "@angular/common": "^14.2.0",
    "@angular/compiler": "^14.2.0",
    "@angular/core": "^14.2.0",
    "@angular/fire": "^7.4.1",
    "@angular/forms": "^14.2.0",
    "@angular/material": "^14.2.0",
    "@angular/platform-browser": "^14.2.0",
    "@angular/platform-browser-dynamic": "^14.2.0",
    "@angular/router": "^14.2.0",
    "@angular/service-worker": "^14.2.0",
    "angular-in-memory-web-api": "^0.14.0",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.11.8"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.2.1",
    "@angular-eslint/builder": "14.0.3",
    "@angular-eslint/eslint-plugin": "14.0.3",
    "@angular-eslint/eslint-plugin-template": "14.0.3",
    "@angular-eslint/schematics": "14.0.3",
    "@angular-eslint/template-parser": "14.0.3",
    "@angular/cli": "~14.2.1",
    "@angular/compiler-cli": "^14.2.0",
    "@angular/localize": "^14.2.0",
    "@types/jasmine": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jasmine-core": "~4.3.0",
    "jasmine-marbles": "^0.9.2",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^28.0.0",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "4.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0 --fix",
      "prettier --write --ignore-unknown --list-different"
    ],
    "**/*.{css,scss,sass}": [
      "stylelint --max-warnings 0 --fix",
      "prettier --write --ignore-unknown --list-different"
    ],
    "**/*": [
      "prettier --write --ignore-unknown --list-different"
    ]
  }
}
