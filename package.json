{
  "name": "angular-tour-of-heroes-example",
  "repository": "https://github.com/gs377209/angular-tour-of-heroes-example.git",
  "version": "11.0.0",
  "description": "learning angular",
  "engines": {
    "node": "^18.13.0",
    "npm": "^8.0.0 || ^9.0.0 || ^10.0.0"
  },
  "engineStrict": true,
  "scripts": {
    "ng": "ng",
    "start": "ng serve --open",
    "start:fr": "ng serve --open --configuration=fr",
    "build": "ng build",
    "deploy": "ng deploy",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessCI",
    "test:coverage": "ng test --no-watch --code-coverage",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepare": "husky",
    "lint": "ng lint --max-warnings 0",
    "stylelint": "stylelint --max-warnings 0 'src/**/*.{css,scss,sass}'",
    "preversion": "npm run test:ci",
    "version": "npm run build && git add .",
    "postversion": "git push && git push --tags && rm -rf build/temp && rm -rf dist",
    "extract": "ng extract-i18n --output-path=src/locale",
    "typecheck": "tsc -p ./tsconfig.app.json && tsc -p ./tsconfig.spec.json && tsc -p ./tsconfig.server.json && tsc -p ./tsconfig.worker.json",
    "mdlint": "markdownlint-cli2 '**/*.md' '#node_modules'",
    "mdlintfix": "markdownlint-cli2-fix '**/*.md' '#node_modules'"
  },
  "dependencies": {
    "@angular/animations": "^17.3.2",
    "@angular/cdk": "^17.3.2",
    "@angular/common": "^17.3.2",
    "@angular/compiler": "^17.3.2",
    "@angular/core": "^17.3.2",
    "@angular/fire": "^17.0.1",
    "@angular/forms": "^17.3.2",
    "@angular/material": "^17.3.2",
    "@angular/platform-browser": "^17.3.2",
    "@angular/platform-browser-dynamic": "^17.3.2",
    "@angular/platform-server": "^17.3.2",
    "@angular/router": "^17.3.2",
    "@angular/service-worker": "^17.3.2",
    "@ngrx/component": "^17.1.1",
    "@ngrx/component-store": "^17.1.1",
    "@ngrx/data": "^17.1.1",
    "@ngrx/effects": "^17.1.1",
    "@ngrx/entity": "^17.1.1",
    "@ngrx/router-store": "^17.1.1",
    "@ngrx/store": "^17.1.1",
    "@ngrx/store-devtools": "^17.1.1",
    "angular-in-memory-web-api": "^0.17.0",
    "rxfire": "^6.0.5",
    "rxjs": "^7.8.1",
    "tslib": "^2.6.2",
    "zone.js": "^0.14.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.2",
    "@angular-eslint/builder": "17.3.0",
    "@angular-eslint/eslint-plugin": "17.3.0",
    "@angular-eslint/eslint-plugin-template": "17.3.0",
    "@angular-eslint/schematics": "17.3.0",
    "@angular-eslint/template-parser": "17.3.0",
    "@angular/cli": "~17.3.2",
    "@angular/compiler-cli": "^17.3.2",
    "@angular/localize": "^17.3.2",
    "@ngrx/eslint-plugin": "^17.1.1",
    "@ngrx/schematics": "^17.1.1",
    "@types/jasmine": "^5.1.4",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jasmine-core": "^5.1.2",
    "jasmine-marbles": "^0.9.2",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "^3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.2.2",
    "markdownlint-cli2": "^0.12.1",
    "prettier": "3.2.5",
    "stylelint": "^16.3.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.4.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings 0 --fix",
      "prettier --write --ignore-unknown --list-different"
    ],
    "**/*.{css,scss,sass}": [
      "stylelint --max-warnings 0 --fix",
      "prettier --write --ignore-unknown --list-different"
    ],
    "**/*": [
      "prettier --write --ignore-unknown --list-different"
    ]
  }
}
